---
const proyectosGuardados = [
  { 
    title: "EPIKON", 
    url: "https://epikon.cl", 
    desc: "Plataforma de cultura Geek, eventos y comunidad. Un punto de encuentro digital.", 
    tech: ["Web", "Eventos", "Comunidad"],
    img: "https://image.thum.io/get/width/800/crop/600/https://epikon.cl"
  },
  { 
    title: "FREEGAMEHUB", 
    url: "https://freegamehub.cl", 
    desc: "Agregador automático de juegos gratuitos y ofertas. Bot de scraping gaming.", 
    tech: ["Gaming", "Scraping", "Bot"],
    img: "https://image.thum.io/get/width/800/crop/600/https://freegamehub.cl"
  },
  { 
    title: "PRESTAFAMILI", 
    url: "#", 
    desc: "Sistema de gestión interna de recursos y préstamos familiares.", 
    tech: ["Sistema", "Node.js", "Privado"],
    img: "https://via.placeholder.com/800x600/0f172a/06b6d4?text=Sistema+Privado"
  }
];
---

<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Gustavo Soto | Cyberpunk Portfolio</title>
    
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'system-ui', 'sans-serif'],
                        mono: ['JetBrains Mono', 'monospace'],
                    }
                }
            }
        }
    </script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&family=JetBrains+Mono&display=swap');
        
        /* Fondo Cyberpunk sutil */
        body {
            background-color: #050b14;
            background-image: 
                radial-gradient(at 0% 0%, rgba(6, 182, 212, 0.15) 0px, transparent 50%),
                radial-gradient(at 100% 100%, rgba(236, 72, 153, 0.15) 0px, transparent 50%),
                linear-gradient(rgba(255,255,255,0.03) 1px, transparent 1px),
                linear-gradient(90deg, rgba(255,255,255,0.03) 1px, transparent 1px);
            background-size: 100% 100%, 100% 100%, 30px 30px, 30px 30px;
            background-attachment: fixed;
        }
        /* Efecto cristal */
        .glass {
            background: rgba(15, 23, 42, 0.6);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        .neon-border-cyan { box-shadow: 0 0 15px rgba(6, 182, 212, 0.3), inset 0 0 15px rgba(6, 182, 212, 0.1); }
        .neon-border-pink { box-shadow: 0 0 15px rgba(236, 72, 153, 0.3), inset 0 0 15px rgba(236, 72, 153, 0.1); }
    </style>
</head>
<body class="text-slate-300 font-sans min-h-screen selection:bg-cyan-500/30">

    <main class="max-w-6xl mx-auto p-6 relative z-10">
        
        <header class="py-12 flex flex-col md:flex-row items-center gap-8 animate-in fade-in slide-in-from-top duration-700">
            <div class="relative group">
                <div class="absolute -inset-1 bg-gradient-to-r from-cyan-500 to-pink-500 rounded-full blur opacity-30 group-hover:opacity-60 transition duration-1000"></div>
                <div class="w-32 h-32 rounded-full relative glass p-1 overflow-hidden">
                    <img src="https://api.dicebear.com/7.x/bottts/svg?seed=Gustavo&backgroundColor=transparent&colors=06b6d4,ec4899" alt="Avatar" class="w-full h-full object-cover rounded-full" />
                </div>
            </div>
            
            <div class="text-center md:text-left space-y-2">
                <div class="flex items-center justify-center md:justify-start gap-2 mb-2">
                    <span class="relative flex h-3 w-3">
                        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-cyan-400 opacity-75"></span>
                        <span class="relative inline-flex rounded-full h-3 w-3 bg-cyan-500"></span>
                    </span>
                    <span class="text-xs font-mono text-cyan-400 tracking-wider uppercase">Sistema Online // Gustavo_Node</span>
                </div>
                <h1 class="text-5xl md:text-6xl font-extrabold tracking-tight text-white bg-clip-text text-transparent bg-gradient-to-r from-white via-cyan-100 to-slate-400">
                    Gustavo Soto
                </h1>
                <p class="text-lg text-slate-400 max-w-md font-light">
                    Desarrollador Web & Técnico. Fusionando tecnología y creatividad en el entorno digital.
                </p>
                
                <div class="flex flex-wrap justify-center md:justify-start gap-2 pt-2">
                    <span class="glass px-3 py-1 text-xs font-mono rounded-full text-cyan-300 border-cyan-500/30">Arch Linux</span>
                    <span class="glass px-3 py-1 text-xs font-mono rounded-full text-pink-300 border-pink-500/30">Astro</span>
                    <span class="glass px-3 py-1 text-xs font-mono rounded-full text-cyan-300 border-cyan-500/30">Tailwind</span>
                </div>
            </div>
        </header>

        <div class="glass rounded-3xl p-2 mb-16 shadow-2xl flex items-center focus-within:neon-border-cyan transition-all duration-300 group animate-in fade-in slide-in-from-bottom duration-700 delay-200">
            <div class="pl-4 text-cyan-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
            </div>
            <input type="url" id="urlInput" placeholder="https://tu-nuevo-proyecto.cl..." class="bg-transparent border-none outline-none text-white w-full px-4 py-3 placeholder-slate-500 font-light text-lg focus:ring-0" autocomplete="off" />
            <button id="btnEscanear" class="bg-gradient-to-r from-cyan-600 to-cyan-500 hover:from-cyan-500 hover:to-cyan-400 text-white font-bold px-8 py-3 rounded-2xl shadow-lg shadow-cyan-500/20 transition-all hover:scale-105 active:scale-95 shrink-0 mr-1">
                Escanear con IA
            </button>
        </div>
        <p id="status" class="text-center -mt-12 mb-12 text-sm text-cyan-400 h-6 font-mono animate-pulse"></p>
        
        <div id="grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {proyectosGuardados.map((p) => (
                <article class="glass rounded-3xl overflow-hidden hover:-translate-y-2 hover:neon-border-cyan transition-all duration-500 group flex flex-col shadow-xl">
                    <div class="aspect-video relative overflow-hidden rounded-t-3xl">
                        <img src={p.img} alt={p.title} class="w-full h-full object-cover opacity-90 group-hover:opacity-100 group-hover:scale-110 transition duration-700" />
                        <div class="absolute inset-0 bg-gradient-to-t from-[#0f172a] via-transparent to-transparent opacity-80"></div>
                        
                        <div class="absolute top-3 right-3 glass px-3 py-1 rounded-full text-[10px] font-mono uppercase tracking-widest text-cyan-300 border-cyan-500/20 backdrop-blur-md shadow-lg">
                            Online
                        </div>
                    </div>
                    
                    <div class="p-6 flex-1 flex flex-col relative">
                        <div class="absolute -inset-px bg-gradient-to-r from-cyan-500/20 to-pink-500/20 rounded-3xl blur opacity-0 group-hover:opacity-100 transition duration-500 -z-10"></div>

                        <h3 class="text-2xl font-bold mb-3 text-white group-hover:text-cyan-400 transition-colors">{p.title}</h3>
                        <p class="text-slate-400 text-sm mb-6 flex-1 leading-relaxed font-light">{p.desc}</p>
                        
                        <div class="flex items-center justify-between mt-auto pt-4 border-t border-white/5">
                            <div class="flex gap-2 flex-wrap">
                                {p.tech.map(t => <span class="px-3 py-1 text-[10px] font-semibold rounded-full bg-slate-800/50 text-slate-300 border border-slate-700/50 group-hover:border-cyan-500/30 transition-colors">{t}</span>)}
                            </div>
                            <a href={p.url} target="_blank" class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center hover:bg-cyan-500 hover:text-white transition-all duration-300 group/link shadow-lg relative overflow-hidden">
                                <div class="absolute inset-0 bg-cyan-400 opacity-0 group-hover/link:opacity-20 blur-md transition duration-300"></div>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transform group-hover/link:rotate-45 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" /></svg>
                            </a>
                        </div>
                    </div>
                </article>
            ))}
        </div>
    </main>

    <script>
        const btn = document.getElementById('btnEscanear');
        const input = document.getElementById('urlInput') as HTMLInputElement;
        const status = document.getElementById('status');
        const grid = document.getElementById('grid');

        btn?.addEventListener('click', async () => {
            let url = input.value.trim();
            if (!url) return;
            if (!/^https?:\/\//i.test(url)) url = 'https://' + url;

            status!.textContent = ">> Inicializando escaneo neuronal...";
            btn!.classList.add('opacity-50', 'cursor-not-allowed');
            
            try {
                const res = await fetch('/api/scan', {
                    method: 'POST',
                    body: JSON.stringify({ url }),
                    headers: { 'Content-Type': 'application/json' }
                });

                const data = await res.json();
                btn!.classList.remove('opacity-50', 'cursor-not-allowed');

                if (data.error) {
                    status!.textContent = "!! Error de sistema: " + data.error;
                    status!.classList.replace('text-cyan-400', 'text-pink-500');
                } else {
                    status!.textContent = ">> Proyecto indexado correctamente.";
                    setTimeout(() => status!.textContent = "", 3000);

                    const urlCaptura = `https://image.thum.io/get/width/800/crop/600/${url}`;

                    const article = document.createElement('article');
                    article.className = "glass rounded-3xl overflow-hidden hover:-translate-y-2 hover:neon-border-cyan transition-all duration-500 group flex flex-col shadow-xl animate-in fade-in zoom-in duration-700";
                    
                    article.innerHTML = `
                        <div class="aspect-video relative overflow-hidden rounded-t-3xl">
                            <img src="${urlCaptura}" alt="${data.title}" class="w-full h-full object-cover opacity-90 group-hover:opacity-100 group-hover:scale-110 transition duration-700" onerror="this.src='https://via.placeholder.com/800x600/0f172a/ec4899?text=Señal+Perdida'"/>
                            <div class="absolute inset-0 bg-gradient-to-t from-[#0f172a] via-transparent to-transparent opacity-80"></div>
                            <div class="absolute top-3 right-3 glass px-3 py-1 rounded-full text-[10px] font-mono uppercase tracking-widest text-cyan-300 border-cyan-500/20 backdrop-blur-md shadow-lg animate-pulse">
                                Nuevo
                            </div>
                        </div>
                        
                        <div class="p-6 flex-1 flex flex-col relative">
                            <div class="absolute -inset-px bg-gradient-to-r from-cyan-500/20 to-pink-500/20 rounded-3xl blur opacity-0 group-hover:opacity-100 transition duration-500 -z-10"></div>
                            <h3 class="text-2xl font-bold mb-3 text-white group-hover:text-cyan-400 transition-colors">${data.title}</h3>
                            <p class="text-slate-400 text-sm mb-6 flex-1 leading-relaxed font-light">${data.description}</p>
                            
                            <div class="flex items-center justify-between mt-auto pt-4 border-t border-white/5">
                                <div class="flex gap-2 flex-wrap">
                                    ${data.tech.map((t:any) => `<span class="px-3 py-1 text-[10px] font-semibold rounded-full bg-slate-800/50 text-slate-300 border border-slate-700/50 group-hover:border-cyan-500/30 transition-colors">${t}</span>`).join('')}
                                </div>
                                <a href="${url}" target="_blank" class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center hover:bg-cyan-500 hover:text-white transition-all duration-300 group/link shadow-lg relative overflow-hidden">
                                    <div class="absolute inset-0 bg-cyan-400 opacity-0 group-hover/link:opacity-20 blur-md transition duration-300"></div>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transform group-hover/link:rotate-45 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" /></svg>
                                </a>
                            </div>
                        </div>
                    `;
                    grid!.prepend(article);
                    input.value = "";
                }
            } catch (err) {
                btn!.classList.remove('opacity-50', 'cursor-not-allowed');
                status!.textContent = "!! Error crítico de conexión";
                status!.classList.replace('text-cyan-400', 'text-pink-500');
            }
        });
    </script>
</body>
</html>