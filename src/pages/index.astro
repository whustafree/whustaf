---
const proyectosGuardados = [
  { 
    title: "EPIKON", 
    url: "https://epikon.cl", 
    desc: ">> PLATAFORMA_GEEK: Cultura, eventos, anime y videojuegos. Punto de conexión comunitario.", 
    tech: ["WEB", "EVENTS", "COMMUNITY"],
    img: "https://image.thum.io/get/width/800/crop/600/https://epikon.cl"
  },
  { 
    title: "FREEGAMEHUB", 
    url: "https://freegamehub.cl", 
    desc: ">> SCRAPER_GAMING: Agregador de loot gratuito y ofertas. Juegos sin micropagos.", 
    tech: ["GAMING", "SCRAPING", "BOT"],
    img: "https://image.thum.io/get/width/800/crop/600/https://freegamehub.cl"
  },
  { 
    title: "PRESTAFAMILI", 
    url: "#", 
    desc: ">> SYS_ADMIN: Red interna de gestión de recursos y préstamos.", 
    tech: ["SYS", "NODE.JS", "DB"],
    img: "https://via.placeholder.com/800x600/000000/06b6d4?text=SYS_OFFLINE"
  }
];
---

<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Gustavo // Netrunner Terminal</title>
    
    <style>
        .scanlines {
            background: linear-gradient(to bottom, rgba(255,255,255,0), rgba(255,255,255,0) 50%, rgba(0,0,0,0.2) 50%, rgba(0,0,0,0.2));
            background-size: 100% 4px;
        }
    </style>
</head>
<body class="bg-black text-cyan-400 font-mono min-h-screen relative selection:bg-pink-500 selection:text-white">
    
    <div class="scanlines fixed inset-0 pointer-events-none z-50 opacity-20"></div>

    <main class="max-w-6xl mx-auto p-4 sm:p-6 relative z-10">
        
        <header class="border-2 border-cyan-500 p-6 mb-8 relative bg-cyan-950/10 shadow-[0_0_15px_rgba(6,182,212,0.3)]">
            <div class="absolute top-0 left-0 bg-cyan-500 text-black px-2 text-xs font-bold uppercase tracking-widest">SYS.LOGIN // ROOT</div>
            <div class="absolute bottom-0 right-0 w-4 h-4 border-b-2 border-r-2 border-pink-500"></div>
            <div class="absolute top-0 right-0 w-4 h-4 border-t-2 border-r-2 border-cyan-500"></div>
            
            <div class="flex flex-col md:flex-row items-center md:items-start gap-6 mt-4">
                <div class="w-24 h-24 border-2 border-pink-500 p-1 bg-black shrink-0 relative group">
                    <img src="https://api.dicebear.com/7.x/bottts/svg?seed=Gustavo&backgroundColor=000000&colors=06b6d4" width="96" height="96" alt="Avatar" class="w-full h-full object-cover filter contrast-125" />
                </div>
                
                <div class="flex-1 text-center md:text-left">
                    <h1 class="text-4xl md:text-5xl font-black text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-pink-500 tracking-widest uppercase mb-2 drop-shadow-[0_0_10px_rgba(6,182,212,0.5)]">
                        GUSTAVO_SOTO
                    </h1>
                    <p class="text-green-400 text-sm mb-4 font-bold">> ADMIN_NODE: Web Developer / Técnico Admin</p>
                    
                    <div class="flex flex-wrap justify-center md:justify-start gap-3 text-xs font-bold">
                        <span class="border border-cyan-500/50 px-2 py-1 text-cyan-300 bg-cyan-900/20 shadow-[0_0_5px_rgba(6,182,212,0.5)]">[ARCH_LINUX]</span>
                        <span class="border border-pink-500/50 px-2 py-1 text-pink-300 bg-pink-900/20 shadow-[0_0_5px_rgba(236,72,153,0.5)]">[ASTRO_JS]</span>
                        <span class="border border-green-500/50 px-2 py-1 text-green-300 bg-green-900/20 shadow-[0_0_5px_rgba(34,197,94,0.5)]">[NODE_ENV]</span>
                    </div>
                </div>
            </div>
        </header>

        <div class="border border-pink-500 p-4 mb-10 bg-black relative shadow-[0_0_10px_rgba(236,72,153,0.2)]">
            <div class="absolute -top-3 left-4 bg-black px-2 text-pink-500 text-xs font-bold tracking-widest">>> EXECUTE_SCANNER</div>
            
            <div class="flex flex-col md:flex-row gap-4 items-center mt-2">
                <div class="flex-1 w-full flex items-center gap-2 bg-gray-950 border border-slate-800 p-3">
                    <span class="text-green-500 font-bold hidden sm:inline">whustaf@system:~$</span>
                    <span class="text-pink-500 font-bold sm:hidden">></span>
                    <input type="url" id="urlInput" placeholder="https://target-url.cl" class="bg-transparent border-none outline-none text-cyan-300 w-full placeholder-slate-700 focus:ring-0" autocomplete="off" />
                </div>
                <button id="btnEscanear" class="w-full md:w-auto bg-pink-600 hover:bg-pink-500 text-white font-bold px-8 py-3 uppercase tracking-widest border border-pink-400 shadow-[0_0_15px_rgba(236,72,153,0.4)] active:scale-95 transition-all">
                    [ INJECT ]
                </button>
            </div>
            <p id="status" class="mt-3 text-[10px] text-cyan-500 h-4 uppercase tracking-widest font-bold"></p>
        </div>
        
        <div id="grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {proyectosGuardados.map((p) => (
                <article class="border border-cyan-800 bg-black flex flex-col relative group hover:border-cyan-400 transition-colors z-10 hover:shadow-[0_0_20px_rgba(6,182,212,0.2)]">
                    <div class="absolute top-0 right-0 w-0 h-0 border-t-[20px] border-t-cyan-900 border-l-[20px] border-l-transparent group-hover:border-t-pink-500 transition-colors"></div>
                    
                    <div class="border-b border-cyan-800 p-1 flex justify-between items-center bg-cyan-950/30 text-[9px] px-2">
                        <span class="text-cyan-500 font-bold">ID: {p.title.substring(0,3)}...</span>
                        <span class="text-green-400 animate-pulse font-bold">STATUS: ONLINE</span>
                    </div>

                    <div class="aspect-video relative overflow-hidden border-b border-cyan-800 bg-gray-900 p-1">
                        <img src={p.img} alt={p.title} class="w-full h-full object-cover opacity-50 group-hover:opacity-100 group-hover:scale-105 filter grayscale group-hover:grayscale-0 contrast-125 transition-all duration-500" />
                        <div class="absolute inset-0 bg-cyan-500/10 pointer-events-none mix-blend-overlay"></div>
                    </div>
                    
                    <div class="p-5 flex-1 flex flex-col">
                        <h3 class="text-xl font-black mb-2 text-pink-500 uppercase tracking-widest drop-shadow-[0_0_5px_rgba(236,72,153,0.5)]">{p.title}</h3>
                        <p class="text-slate-400 text-xs mb-6 flex-1 leading-relaxed">{p.desc}</p>
                        
                        <div class="flex items-center justify-between mt-auto pt-4 border-t border-cyan-900 border-dashed">
                            <div class="flex gap-2 flex-wrap">
                                {p.tech.map(t => <span class="text-[9px] font-bold uppercase bg-black text-cyan-400 px-1 border border-cyan-800">#{t}</span>)}
                            </div>
                            <a href={p.url} target="_blank" class="text-[10px] font-bold text-cyan-400 hover:text-black hover:bg-cyan-400 px-3 py-1 border border-cyan-400 transition-colors uppercase tracking-widest">
                                CONNECT_
                            </a>
                        </div>
                    </div>
                </article>
            ))}
        </div>
    </main>

    <script>
        const btn = document.getElementById('btnEscanear');
        const input = document.getElementById('urlInput') as HTMLInputElement;
        const status = document.getElementById('status');
        const grid = document.getElementById('grid');

        btn?.addEventListener('click', async () => {
            let url = input.value.trim();
            if (!url) return;
            if (!/^https?:\/\//i.test(url)) url = 'https://' + url;

            status!.textContent = ">> ESTABLISHING CONNECTION TO TARGET...";
            status!.classList.add('animate-pulse');
            
            try {
                const res = await fetch('/api/scan', {
                    method: 'POST',
                    body: JSON.stringify({ url }),
                    headers: { 'Content-Type': 'application/json' }
                });

                const data = await res.json();
                status!.classList.remove('animate-pulse');

                if (data.error) {
                    status!.textContent = "!! SYSTEM_ERR: " + data.error;
                    status!.className = "mt-3 text-[10px] text-red-500 h-4 uppercase tracking-widest font-bold";
                } else {
                    status!.textContent = ">> DATA_ACQUIRED: NEW NODE LOGGED.";
                    status!.className = "mt-3 text-[10px] text-green-500 h-4 uppercase tracking-widest font-bold";
                    const urlCaptura = `https://image.thum.io/get/width/800/crop/600/${url}`;

                    const article = document.createElement('article');
                    article.className = "border border-pink-500 bg-black flex flex-col relative group hover:border-pink-400 transition-colors z-10 shadow-[0_0_20px_rgba(236,72,153,0.3)] animate-pulse";
                    
                    article.innerHTML = `
                        <div class="absolute top-0 right-0 w-0 h-0 border-t-[20px] border-t-pink-500 border-l-[20px] border-l-transparent"></div>
                        <div class="border-b border-pink-900 p-1 flex justify-between items-center bg-pink-950/30 text-[9px] px-2">
                            <span class="text-pink-500 font-bold">ID: NEW_NODE</span>
                            <span class="text-green-400 font-bold">STATUS: ONLINE</span>
                        </div>
                        <div class="aspect-video relative overflow-hidden border-b border-pink-900 bg-gray-900 p-1">
                            <img src="${urlCaptura}" alt="${data.title}" class="w-full h-full object-cover opacity-60 group-hover:opacity-100 filter grayscale group-hover:grayscale-0 contrast-125 transition-all duration-500" onerror="this.src='https://via.placeholder.com/800x600/000000/ff00ff?text=SIGNAL_LOST'"/>
                        </div>
                        <div class="p-5 flex-1 flex flex-col">
                            <h3 class="text-xl font-black mb-2 text-cyan-400 uppercase tracking-widest drop-shadow-[0_0_5px_rgba(6,182,212,0.5)]">${data.title}</h3>
                            <p class="text-slate-400 text-xs mb-6 flex-1 leading-relaxed">${data.description}</p>
                            
                            <div class="flex items-center justify-between mt-auto pt-4 border-t border-pink-900 border-dashed">
                                <div class="flex gap-2 flex-wrap">
                                    ${data.tech.map((t:any) => `<span class="text-[9px] font-bold uppercase bg-black text-pink-400 px-1 border border-pink-800">#${t}</span>`).join('')}
                                </div>
                                <a href="${url}" target="_blank" class="text-[10px] font-bold text-pink-500 hover:text-black hover:bg-pink-500 px-3 py-1 border border-pink-500 transition-colors uppercase tracking-widest">
                                    CONNECT_
                                </a>
                            </div>
                        </div>
                    `;
                    grid!.prepend(article);
                    setTimeout(() => article.classList.remove('animate-pulse'), 1500);
                    input.value = "";
                }
            } catch (err) {
                status!.classList.remove('animate-pulse');
                status!.textContent = "!! CONNECTION SEVERED";
            }
        });
    </script>
</body>
</html>